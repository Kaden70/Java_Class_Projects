package unit_2;
import java.util.Scanner;

public class U2Ex3 {
    public static void main(String[] args) {
        Scanner read = new Scanner(System.in);
        System.out.println("Enter your name: ");
        String name = read.nextLine();

        System.out.println("Hello " + name);
        System.out.println("Insult: You are my enemy, " + name);
        System.out.println(name + " is being monitored for suspicious activity");

        int choice;
        System.out.println("Choose a number (1-3): ");
        choice = read.nextInt();
        read.close();

        switch (choice) {
            case 1:
                System.out.println("You choose right!");
                break;
            case 2:
                System.out.println("You choose wrong and will be executed.");
                break;
            case 3:
                System.out.println("You chose poorly and will be detained immediately.");
                break;
        }
    }
}
